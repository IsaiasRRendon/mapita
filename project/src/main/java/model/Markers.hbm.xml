<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Markers" table="markers" schema="public" catalog="mapita">
        <composite-id mapped="true" class="model.MarkersPK">
            <key-property name="markerId">
                <column name="marker_id" sql-type="integer"/>
            </key-property>
            <key-property name="topicId">
                <column name="topic_id" sql-type="integer"/>
            </key-property>
            <key-property name="topicOwner">
                <column name="topic_owner" sql-type="integer"/>
            </key-property>
        </composite-id>
        <property name="markerLocation">
            <column name="marker_location" sql-type="point"/>
        </property>
    </class>
</hibernate-mapping>